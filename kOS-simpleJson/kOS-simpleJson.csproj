<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>kOS_simpleJson</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="KSPBuildTools" Version="1.1.1" />
  </ItemGroup>
  <ItemGroup>
    <ModReference Include="kOS">
      <DLLPath>GameData/kOS/Plugins/kOS.dll</DLLPath>
      <CKANIdentifier>kOS</CKANIdentifier>
    </ModReference>
    <ModReference Include="kOS.Safe">
      <DLLPath>GameData/kOS/Plugins/kOS.Safe.dll</DLLPath>
    </ModReference>
  </ItemGroup>
  <ItemGroup>
    <KSPVersionFile Include=".">
      <Destination>$(KSPBT_ModRoot)/kOS-simpleJson.version</Destination>
      <URL>https://raw.githubusercontent.com/Thr0in/kOS-simpleJson/main/GameData/kOS-simpleJson/kOS-simpleJson.version</URL>
      <Download>https://github.com/Thr0in/kOS-simpleJson/releases/latest</Download>
    </KSPVersionFile>
  </ItemGroup>
</Project>
